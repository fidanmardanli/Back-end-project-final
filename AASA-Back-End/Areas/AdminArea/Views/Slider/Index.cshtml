@model Slider

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid my-3 mx-3">
    <div class="table-responsive pt-3">
        <div class="create-btn">
            <a asp-area="AdminArea" asp-controller="Slider" asp-action="Create"> <i class="mdi mdi-new-box"></i></a>
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Image
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Text
                    </th>
                    <th>
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        1
                    </td>
                    <td>
                        <img src="~/assets/img/@Model.ImageFirst" />
                    </td>
                    <td>
                        @Model.TitleFirst
                    </td>
                    <td>
                        @Model.DescriptionFirst
                    </td>
                    <td>
                        @Model.TextFirst
                    </td>
                    <td>
                        <button type="button" class="btn btn-info">  <i class="mdi mdi-information"></i></button>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">  <i class="mdi mdi-table-edit"></i></a>
                        <button type="button" class="btn btn-danger"><i class="mdi mdi-delete"></i></button>
                    </td>
                </tr>
                <tr>
                    <td>
                        2
                    </td>
                    <td>
                        <img src="~/assets/img/@Model.ImageSecond" />
                    </td>
                    <td>
                        @Model.TitleSecond
                    </td>
                    <td>
                        @Model.DescriptionSecond
                    </td>
                    <td>
                        @Model.TextSecond
                    </td>
                    <td>
                        <button type="button" class="btn btn-info">  <i class="mdi mdi-information"></i></button>
                        <button type="button" class="btn btn-primary">  <i class="mdi mdi-table-edit"></i></button>
                        <button type="button" class="btn btn-danger"><i class="mdi mdi-delete"></i></button>
                    </td>
                </tr>
                <tr>
                    <td>
                        3
                    </td>
                    <td>
                        <img src="~/assets/img/@Model.ImageThird" />
                    </td>
                    <td>
                        @Model.TitleThird
                    </td>
                    <td>
                        @Model.DescriptionThird
                    </td>
                    <td>
                        @Model.TextThird
                    </td>
                    <td>
                        <button type="button" class="btn btn-info">  <i class="mdi mdi-information"></i></button>
                        <button type="button" class="btn btn-primary">  <i class="mdi mdi-table-edit"></i></button>
                        <button type="button" class="btn btn-danger"><i class="mdi mdi-delete"></i></button>
                    </td>
                </tr>

            </tbody>
        </table>
    </div>
</div>
